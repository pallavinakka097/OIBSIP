                <td><button  class="q" id="b1" value="." onclick="cal(this.value)">.</button></td>
                <td><button  class="q" id="b1" value="0" onclick="cal(this.value)">0</button></td>
                <td><button  class="q" id="b1" value="=" onclick="calculate()">=</button></td>
                <td><button  class="q" id="b1" value="/" onclick="cal(this.value)">/</button></td>
            </tr>
        </table>
